        $(document).ready(function() {

          
                    $.ajax({
                        url: "/umbraco/api/General/SetPageViewCounter",
                        dataType: "JSON",
                        type: "POST",
                        data: {
                        contentId: 2501,
                         culture:"en-US"
                        },
                        success: function(data) {
                        }
                    });
            GetWeatherData();
         
