        function GetWeatherData() {
            var pageId = '1075';
            $.ajax({
                type: "GET",
                contentType: "application/json; charset=utf-8",
                dataType: 'json',
                 url: "/umbraco/surface/WeatherForecast/GetWeatherData?&culture=en",
                success: function(data) {
                    if (data.status) {
                        var json = data.result;
                        $('.weather').append(`<div class="icon"> <img id="weatherIcon"  src="` + json.icon + `" alt="${json.description}"></div>
                                            <div class="text">
                                                <span id="ist-temperature" class="tempature">${json.temperature} ºC</span>
                                                        <span class="situation">${json.description}</span></div>`);
                         // GetWeatherIcon(json[0]);
                    }
                    else {
                        $('.weather').empty();
                    }
                },
                failure: function(data) {
                    $('.weather').empty();
                },
                error: function(data) {
                    $('.weather').empty();
                }
            });
        };

        function GetWeatherIcon(dataResult) {
            var weatherIcon=parseInt(dataResult.WeatherIcon);
            var pageId = '1075';
            $.ajax({
                type: "GET",
                contentType: "application/json; charset=utf-8",
                dataType: 'json',
                data: { pageId: pageId, weatherIcon: weatherIcon , culture:"en-US" },
                url: "/umbraco/surface/WeatherForecast/GetWeatherForecastIcon",
                success: function(data) {
                if (data.status) {
                    $('.weather').append(`<div class="icon"> <img id="weatherIcon" style="width:60px;" src="`+data.result+`" alt="${dataResult.WeatherText}"></div>
                                                                                        <div class="text">
                                                                                            <span id="ist-temperature" class="tempature">${dataResult.Temperature.Metric.Value} ºC</span>
                                                                                                 <span class="situation">${dataResult.WeatherText}</span></div>`)
                   //$('#ist-temperature').text(dataResult.Temperature.Metric.Value + "ºC");
                    }
                    else {
                   
                        $('.weather').empty();
                    }
                },
                failure: function(data) {
                    $('.weather').empty();
                },
                error: function(data) {
                    $('.weather').empty();
                }
            });
        };
    </script>
    <script type="text/javascript">
      function changeElementHref() {
            var hrefVal = "";
            $("a").each(function () {
                if (!$(this).hasClass("dropdown-item")
                    && $(this).attr("href") != undefined
                    && !$(this).hasClass("nav-link")) {

                    hrefVal = $(this).attr("href");
                    hrefVal = hrefVal == undefined ? "" : hrefVal;
                    var hrefExt = "";
                    if (hrefVal.includes("#")) {
                        hrefExt = hrefVal.substring(hrefVal.indexOf("#"), hrefVal.length);
                        hrefVal = hrefVal.substring(0, hrefVal.indexOf("#"));
                    }

                    if (hrefVal.includes("?") && "" != "") {
                        hrefVal = hrefVal + "&";
                    }
                    else if (!hrefVal.includes("?") && "" != "") {
                        hrefVal = hrefVal + "?";
                    }

                    if (!hrefVal.includes("locale")) {
                        $(this).attr("href", hrefVal + "" + hrefExt);

                    }

                    if ("" != "" && hrefVal.includes("?")) {
                        $(this).attr("href", hrefVal + "&ismobile=true" + hrefExt);

                    }
                    else if ("" != "" && !hrefVal.includes("?")) {
                        $(this).attr("href", hrefVal + "?ismobile=true" + hrefExt);

                    }

                }

            });
        }

             $(document).ready(function() {
                 initTimeHHMM();
                 changeElementHref();
             });

             function initTimeHHMM() {
                 $(".time-mask").attr('maxlength', '5');
                 //$(".time-mask").attr('placeholder', 'HH:MM');
                 $(".time-mask").bind({
                     keydown: CheckNum,
                     blur: formateHHMM,
                     focus: unformateHHMM
                 });
             }

             function CheckNum(e) {
                 // Allow: backspace, delete, tab, escape, enter and .
                 if ($.inArray(e.keyCode, [46, 8, 9, 27, 13]) !== -1 ||
                     // Allow: Ctrl+A, Command+A
                     (e.keyCode === 65 && (e.ctrlKey === true || e.metaKey === true)) ||
                     // Allow: home, end, left, right, down, up
                     (e.keyCode >= 35 && e.keyCode <= 40)) {
                     // let it happen, don't do anything
                     return;
                 }
                 // Ensure that it is a number and stop the keypress
                 if ((e.shiftKey || (e.keyCode < 48 || e.keyCode > 57)) && (e.keyCode < 96 || e.keyCode > 105)) {
                     e.preventDefault();
                 }
             };
             function unformateHHMM(e) {
                 $(this).val($(this).val().replace(':', ''));
             }

             function formateHHMM(e) {
                 var str = $(this).val();
                 if (str.length > 2) {
                     str = ('0' + str).slice(-4);
                 }
                 else {
                     str = ('0' + str + '00').slice(-4);
                 }
                 var mm = parseInt(str.substr(2, 2));
                 var hh = parseInt(str.slice(0, 2));
                 if (mm > 59) {
                     mm = mm - 60;
                 }

                 if (hh > 23) {
                     hh = hh % 24;
                 }
                 mm = ('0' + mm).slice(-2);
                 hh = ('0' + hh).slice(-2);
                 var formate = hh + ':' + mm;
                 $(this).val(formate);
             }
             
            
    </script>
</body>
</html>