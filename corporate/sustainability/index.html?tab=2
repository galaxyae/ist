    <script src="https://www.istairport.com/umbraco/lib/jquery/jquery.min.js"></script>
    <script src="https://www.istairport.com/assets/scripts/IGA-Istairport.lib.min.js"></script>
 
   
       <script src="https://www.istairport.com/assets/scripts/IGA-Istairport.app.min.js?ver=655593511"></script>
    
    <script src="https://www.istairport.com/assets/lib/jquery.validate.js?ver=142712115"> </script>
  
    <script src="https://www.istairport.com/assets/lib/jquery.validate.unobtrusive.js"> </script>
        <script async src="https://cdn.mindbehind.com/sdk/mindbehind-sdk.js?auto=true&amp;key=65915fd0137300741ec04060"></script>
    <script src="https://www.istairport.com/assets/lib/jquery.mask.min.js"></script>
    <script src="https://www.istairport.com/assets/lib/sweetalert.min.js"></script>


    

    <script type="text/javascript">


    
                     $(function() {
     $('.search-text').on('input', function() {
                     var itemList = document.getElementsByClassName("libraryItems");
                         var searchText = this.value.trim().toLowerCase();
                        $.each($(itemList).find(".slick-item"), function(key, value) {
                            if (!value.textContent.toLowerCase().includes(searchText)) {
                                $(value).hide();
                            }
                            else {
                                $(value).show();
                            }
                      });

                 });
                             $(document).on("change", "select.sortFileList", function() {

                                 selectedFilterValue = $(this).val();
                                 sortFileList(selectedFilterValue);
                             });
                       

                            $.ajax({
                                url: "/umbraco/api/IgaWebSite/GetLibraryItems",
                                type: "GET",
                                dataType: "JSON",
                                data: { culture: "en-US" },
                                contentType: "application/json; charset=utf-8",
                                success: function(result) {
                                    if (result.status) 
                                    {
                                        var pressList = '';
                                        var data =JSON.parse(result.data);
                                        for (var i = 0; i < data.length; i++) 
                                        {
                                            var item = data[i];
                                            var publishedDate = new Date(item.publishedDate);

                                            pressList += `<div class="slick-item my-4"  data-date="${publishedDate.toLocaleDateString()}">
                                            <div class="default-card">
                                                <div class="card-content">
                                                    <div class="content-body">
                                                        <p>`;
                                                            if (item.tags != null) { 
                                                            for (var j = 0; j < item.tags.length; j++) 
                                                            {
                                                                pressList += item.tags[j];
                                                                if (item.tags.length - 1 > j) {
                                                                    pressList += `,`;
                                                                }
                                                            }
                                                            }
                                            pressList +=`</p>
                                                         <div class="top-date mb-1">
                                                            <span>${publishedDate.toLocaleDateString()}</span>
                                                        </div>
                                                        <div class="main-title">
                                                            <span>${item.title}</span>
                                                        </div>
                                                        <div class="read-details black">
                                                            <a href="${item.documentUrl}" target="_blank">
                                                                <span class="text">Read Details</span>
                                                                <span class="icon icon-chevron-right"></span>
                                                            </a>
                                                        </div>
                                                         <div class="download">
                                                            <span class="">${item.size}</span>
                                                            <a href="${item.documentUrl}" target="_blank">
                                                                <span class="icon icon-download"></span>
                                                            </a>
                                                           </div>
                                                       
                                                       
                                                    </div>
                                                </div>
                                                <div class="card-img">
                                                    <img src="${item.imageUrl}?format=webp" alt="${item.imageAltText}">
                                                </div>
                                            </div>
                                        </div>`;
                                                                                 
                                        }

                                        $(".libraryItems").html(pressList);
                                        
                                    }
                                }
                            });

  });

 function sortFileList(sortType) {
                             var newsList = document.getElementsByClassName("libraryItems");
                             
                             var newList = Array.from($(newsList).find(".slick-item")).sort((date1, date2) => new Date($(date1).data("date")).setHours(0, 0, 0, 0) - new Date($(date2).data("date")).setHours(0, 0, 0, 0));

                             if (sortType == 1) {
                                 newList.reverse();
                             }

                             newList.forEach(item => $(newsList).append(item));
                         }
    </Script>
<script type="text/javascript">

                function sortMediaList(sortType) {
                    var newsList = document.getElementsByClassName("sustanbilityNews");
                             
                    var newList = Array.from($(newsList).find(".slick-item")).sort((date1, date2) => new Date($(date1).data("date")).setHours(0, 0, 0, 0) - new Date($(date2).data("date")).setHours(0, 0, 0, 0));

                    if (sortType == 1) {
                        newList.reverse();
                    }

                    newList.forEach(item => $(newsList).append(item));
                }

                $(function() {
                       $(document).on("change", "select.sortMediaList", function() {

                           selectedFilterValue = $(this).val();
                           sortMediaList(selectedFilterValue);
                       });
        
                       $('.search-text').on('input', function() {
                              var itemList = document.getElementsByClassName("sustanbilityNews");
                              var searchText = this.value.trim().toLowerCase();
                               $.each($(itemList).find(".slick-item"), function(key, value) {
                                    if (!value.textContent.toLowerCase().includes(searchText)) {
                                        $(value).hide();
                                    }
                                    else {
                                        $(value).show();
                                    }
                              });

                         });

                       $.ajax({
                                url: "/umbraco/api/IgaWebSite/GetSustainabilityNews",
                                type: "GET",
                                dataType: "JSON",
                                data: { culture: "en-US" },
                                contentType: "application/json; charset=utf-8",
                                success: function(result) {
                                    if (result.status) 
                                    {
                                        var pressList = '';
                                        var data = JSON.parse(result.data);
                                        for (var i = 0; i < data.length; i++) 
                                        {
                                            var item = data[i];
                                            var publishedDate = new Date(item.publishedDate);
                                            pressList += `<div class="slick-item my-4" data-date="${publishedDate.toLocaleDateString()}">
                                            <div class="default-card">
                                                <div class="card-content">
                                                    <div class="content-body">
                                                        <p>`;
                                                            if (item.tags != null) { 
                                                            for (var j = 0; j < item.tags.length; j++) 
                                                            {
                                                                pressList += item.tags[j];
                                                                if (item.tags.length - 1 > j) {
                                                                    pressList += `,`;
                                                                }
                                                            }
                                                            }
                                                         pressList +=`</p>
                                                      <div class="top-date mb-1">
                                                            <span>${publishedDate.toLocaleDateString()}</span>
                                                        </div>
                                                        <div class="main-title">
                                                            <span>${item.title}</span>
                                                        </div>
                                                        <div class="read-details black">
                                                            <a href="${item.returnUrl}" target="_blank">
                                                                <span class="text">Read Details</span>
                                                                <span class="icon icon-chevron-right"></span>
                                                            </a>
                                                        </div>
                                                         
                                                       
                                                    </div>
                                                </div>
                                                <div class="card-img">
                                                    <img src="${item.imageUrl}?format=webp" alt="${item.imageAltText}">
                                                </div>
                                            </div>
                                        </div>`;
                                                                                 
                                        }

                                        $(".sustanbilityNews").html(pressList);
                                         
                                    }
                                }
                            });
                });
                    
